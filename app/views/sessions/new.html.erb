<div class="mx-auto w-full max-w-md py-12">
  <div class="bg-white px-8 py-10 shadow-2xl rounded-3xl border border-slate-100 ring-1 ring-slate-900/5">
    <div class="sm:mx-auto sm:w-full sm:max-w-md mb-8">
      <h2 class="text-center text-3xl font-display font-bold tracking-tight text-slate-900">Welcome Back</h2>
      <p class="mt-2 text-center text-sm text-slate-500">Sign in to your account to continue</p>
    </div>

    <%= form_with url: session_path, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :email_address, "Email Address", class: "block text-sm font-semibold leading-6 text-slate-900" %>
        <div class="mt-2">
          <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "email", placeholder: "you@example.com", value: params[:email_address], class: "block w-full rounded-xl border-0 py-3 text-slate-900 shadow-sm ring-1 ring-inset ring-slate-300 placeholder:text-slate-400 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm sm:leading-6 transition-all" %>
        </div>
      </div>

      <div>
        <div class="flex items-center justify-between">
          <%= form.label :password, class: "block text-sm font-semibold leading-6 text-slate-900" %>
          <div class="text-sm">
            <%= link_to "Forgot password?", new_password_path, class: "font-semibold text-primary-600 hover:text-primary-500" %>
          </div>
        </div>
        <div class="mt-2">
          <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "••••••••", class: "block w-full rounded-xl border-0 py-3 text-slate-900 shadow-sm ring-1 ring-inset ring-slate-300 placeholder:text-slate-400 focus:ring-2 focus:ring-inset focus:ring-primary-600 sm:text-sm sm:leading-6 transition-all" %>
        </div>
      </div>

      <div>
        <%= form.submit "Sign in", class: "flex w-full justify-center rounded-full bg-slate-900 px-6 py-3 text-sm font-bold leading-6 text-white shadow-lg hover:bg-primary-600 transition-all hover:scale-[1.02] active:scale-[0.98] cursor-pointer" %>
      </div>
    <% end %>

    <p class="mt-10 text-center text-sm text-slate-500">
      Not a member?
      <%= link_to "Create an account", new_registration_path, class: "font-semibold leading-6 text-primary-600 hover:text-primary-500" %>
    </p>
  </div>
</div>
