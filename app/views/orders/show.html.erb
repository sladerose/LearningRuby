<div class="mx-auto max-w-3xl px-4 py-12 sm:px-6 lg:px-8">
  <div class="bg-white shadow-2xl rounded-3xl border border-slate-100 p-8 sm:p-12 overflow-hidden relative">
    <!-- Success Confetti/Background Pattern -->
    <div class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-primary-500 via-indigo-500 to-primary-500"></div>
    
    <div class="text-center mb-12">
      <div class="inline-flex items-center justify-center h-20 w-20 rounded-full bg-emerald-50 mb-6 text-emerald-500">
        <svg class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 12.75 6 6 9-13.5" />
        </svg>
      </div>
      <h1 class="text-4xl font-display font-bold tracking-tight text-slate-900">Thank you for your order!</h1>
      <p class="mt-3 text-lg text-slate-500 font-medium">Order #<%= @order.id %></p>
    </div>

    <div class="bg-slate-50 rounded-2xl p-6 mb-10 border border-slate-100 flex flex-wrap gap-x-12 gap-y-4">
      <div>
        <span class="block text-xs uppercase tracking-wider font-bold text-slate-400 mb-1">Confirmation Email</span>
        <span class="text-slate-900 font-medium"><%= @order.email_address %></span>
      </div>
      <div>
        <span class="block text-xs uppercase tracking-wider font-bold text-slate-400 mb-1">Status</span>
        <span class="inline-flex items-center rounded-full bg-emerald-100 px-2.5 py-0.5 text-xs font-semibold text-emerald-800">
          <%= @order.status&.capitalize || "Pending" %>
        </span>
      </div>
      <div>
        <span class="block text-xs uppercase tracking-wider font-bold text-slate-400 mb-1">Date</span>
        <span class="text-slate-900 font-medium"><%= @order.created_at.strftime("%B %d, %Y") %></span>
      </div>
    </div>

    <div class="flow-root">
      <h2 class="text-xl font-display font-bold text-slate-900 mb-6">Order Details</h2>
      <ul role="list" class="-my-6 divide-y divide-slate-100">
        <% @order.line_items.each do |item| %>
          <li class="flex py-6">
            <div class="h-24 w-24 flex-shrink-0 overflow-hidden rounded-xl border border-slate-100">
              <% if item.product.image.attached? %>
                <%= image_tag item.product.image, class: "h-full w-full object-cover object-center" %>
              <% else %>
                <div class="h-full w-full bg-slate-50 flex items-center justify-center text-slate-300">
                  <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375 0 1 1-.75 0 .375 0 0 1 .75 0Z" />
                  </svg>
                </div>
              <% end %>
            </div>

            <div class="ml-4 flex flex-1 flex-col">
              <div>
                <div class="flex justify-between text-base font-display font-semibold text-slate-900">
                  <h3><%= item.product.name %></h3>
                  <p class="ml-4"><%= number_to_currency(item.price * item.quantity) %></p>
                </div>
              </div>
              <div class="flex flex-1 items-end justify-between text-sm">
                <p class="text-slate-500 font-medium">Qty <%= item.quantity %> x <%= number_to_currency(item.price) %></p>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="border-t border-slate-100 mt-10 pt-8">
      <div class="flex justify-between text-xl font-display font-bold text-slate-900">
        <p>Total Amount</p>
        <p class="text-primary-600"><%= number_to_currency(@order.total) %></p>
      </div>
      
      <div class="mt-12 text-center">
        <%= link_to root_path, class: "inline-flex items-center justify-center rounded-full bg-slate-900 px-8 py-4 text-base font-bold text-white shadow-lg hover:bg-primary-600 transition-all hover:scale-[1.02] active:scale-[0.98]" do %>
          Continue Shopping
        <% end %>
      </div>
    </div>
  </div>
</div>
