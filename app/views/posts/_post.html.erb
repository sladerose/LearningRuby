<%= turbo_frame_tag post do %>
  <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100 hover:shadow-md transition-shadow duration-200">
    <div class="mb-4">
      <h3 class="text-xl font-bold text-gray-900 mb-2">
        <%= link_to post.title, post, class: "hover:text-blue-600 hover:underline decoration-2 underline-offset-2 transition-colors", data: { turbo_frame: "_top" } %>
      </h3>
      <div class="text-gray-600 leading-relaxed text-sm">
        <%= truncate(post.body, length: 140) %>
      </div>
    </div>
    
    <div class="flex items-center space-x-4 text-sm text-gray-500 border-t border-gray-50 pt-4 mt-4">
      <span class="flex items-center">
        <svg class="w-4 h-4 mr-1.5 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
        <%= time_ago_in_words(post.created_at) %> ago
      </span>
      
      <div class="flex-grow"></div>
      
      <%= link_to "Edit", edit_post_path(post), class: "text-blue-600 hover:text-blue-800 font-medium transition-colors" %>
    </div>
  </div>
<% end %>
