<div id="<%= dom_id product %>" class="w-full sm:w-auto my-5 space-y-5">
  <% if product.image.attached? %>
    <div class="mb-4">
      <%= image_tag product.image, class: "w-full h-48 object-cover rounded-md" %>
    </div>
  <% end %>

  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= product.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= product.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Price:</strong>
    <%= product.price %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Stock:</strong>
    <%= product.stock %>
  </div>
</div>
