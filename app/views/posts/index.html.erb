<% content_for :title, "Posts" %>

<div class="w-full">
  <div class="flex justify-between items-center mb-8">
    <h2 class="text-3xl font-bold text-gray-900 tracking-tight">Latest Posts</h2>
    <%= link_to "New post", new_post_path, class: "rounded-full bg-blue-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 transition-all", data: { turbo_frame: "new_post" } %>
  </div>

  <%= turbo_stream_from "posts" %>
  <%= turbo_frame_tag "new_post", class: "block mb-8" %>

  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 text-green-500 font-medium rounded-lg inline-block mb-6 fade-in" id="notice"><%= notice %></p>
  <% end %>

  <div id="posts" class="min-w-full">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <div id="<%= dom_id post %>">
          <%= render post %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", post, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= link_to "Edit", edit_post_path(post), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= button_to "Destroy", post, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No posts found.</p>
    <% end %>
  </div>
</div>
